{
  "cli": {
    "version": ">= 14.7.1"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal"
    },
    "maestro": {
      "distribution": "internal",
      "developmentClient": false,
      "android": {
        "buildType": "apk",
        "gradleCommand": ":app:assembleRelease",
        "withoutCredentials": true,
        "image": "latest"
      },
      "ios": {
        "simulator": true,
        "buildConfiguration": "Release",
        "scheme": "Recipedia"
      },
      "cache": {
        "disabled": false,
        "paths": [
          "node_modules",
          ".expo",
          "android/.gradle"
        ]
      },
      "env": {
        "NODE_OPTIONS": "--max-old-space-size=4096"
      }
    },
    "production": {
      "distribution": "store",
      "android": {
        "buildType": "app-bundle",
        "image": "latest"
      },
      "ios": {
        "buildConfiguration": "Release"
      }
    }
  }
}
