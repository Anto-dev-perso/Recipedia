{
  "name": "recipedia",
  "version": "0.13.0",
  "packageManager": "npm@10.9.3",
  "main": "node_modules/expo/AppEntry.js",
  "scripts": {
    "start": "expo start",
    "dev:android": "expo run:android",
    "dev:ios": "expo run:ios",
    "dev:clean": "npx expo start --clear",
    "build:test:android": "NODE_OPTIONS=\"--max-old-space-size=4096\" eas build --local --profile maestro --platform android",
    "build:test:ios": "eas build --local --profile maestro --platform ios",
    "build:prod:android": "NODE_OPTIONS=\"--max-old-space-size=4096\" eas build --local --profile production --platform android --non-interactive",
    "build:prod:ios": "eas build --local --profile production --platform ios --non-interactive",
    "build:clean": "rm -rf android/app/build ios/build .expo",
    "install:android": "adb install build*.apk && rm -f build*.apk",
    "install:ios": "echo 'TODO: iOS installation not implemented'",
    "submit:android": "eas submit --platform android --path ./build-*.aab --non-interactive",
    "submit:ios": "eas submit --platform ios --path ./build-*.ipa --non-interactive",
    "submit:android:latest": "eas submit --platform android --latest --non-interactive",
    "submit:ios:latest": "eas submit --platform ios --latest --non-interactive",
    "test": "npm run test:unit",
    "test:unit": "jest --verbose --config jest.config.js",
    "test:unit:watch": "jest --watchAll --silent --config jest.config.js",
    "test:unit:coverage": "jest --silent --coverage --json --outputFile=jest-results.json --config jest.config.js",
    "test:unit:fail-only": "jest --silent --onlyFailures --config jest.config.js",
    "test:e2e:android": "maestro test --debug-output=maestro_logs  --format junit tests/e2e/*.yaml",
    "test:e2e:ios": "echo 'TODO: iOS E2E tests not implemented'",
    "lint": "eslint src/ --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint src/ --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json}\"",
    "typecheck": "tsc --noEmit",
    "expo:doctor": "npx expo-doctor",
    "quality": "npm run lint && npm run format:check && npm run typecheck && npm run expo:doctor",
    "docs:build": "typedoc",
    "docs:clean": "rm -rf docs/",
    "workflow:build-test:android": "npm run build:test:android && npm run install:android && npm run test:e2e:android",
    "workflow:quality": "npm run quality && npm run test:unit:coverage",
    "release": "semantic-release",
    "security:audit": "npm audit --audit-level=moderate",
    "prepare": "husky",
    "android": "expo run:android",
    "ios": "expo run:ios"
  },
  "expo": {
    "doctor": {
      "reactNativeDirectoryCheck": {
        "exclude": [
          "@react-native-ml-kit/text-recognition"
        ],
        "listUnknownPackages": false
      }
    }
  },
  "lint-staged": {
    "{src,tests}/**/*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "{src,tests}/**/*.{json,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@babel/core": "~7.28.4",
    "@react-native-async-storage/async-storage": "1.23.1",
    "@react-native-community/slider": "4.5.5",
    "@react-native-ml-kit/text-recognition": "~1.5.2",
    "@react-navigation/bottom-tabs": "~6.5.8",
    "@react-navigation/native": "~6.1.7",
    "@react-navigation/native-stack": "~6.9.13",
    "@react-navigation/stack": "~6.3.17",
    "@shopify/flash-list": "1.7.3",
    "better-sqlite3": "~11.8.1",
    "expo": "~52.0.42",
    "expo-asset": "~11.0.5",
    "expo-dev-client": "~5.0.19",
    "expo-file-system": "~18.0.10",
    "expo-font": "~13.0.4",
    "expo-image": "~2.0.7",
    "expo-image-manipulator": "~13.0.6",
    "expo-localization": "~16.0.1",
    "expo-splash-screen": "~0.29.24",
    "expo-sqlite": "~15.1.4",
    "fuse.js": "^7.1.0",
    "i18next": "^25.5.2",
    "i18next-resources-to-backend": "^1.2.1",
    "react": "18.3.1",
    "react-i18next": "^15.5.1",
    "react-native": "0.76.9",
    "react-native-copilot": "3.3.3",
    "react-native-extended-stylesheet": "~0.12.0",
    "react-native-gesture-handler": "~2.20.2",
    "react-native-image-crop-picker": "~0.42.0",
    "react-native-logs": "^5.3.0",
    "react-native-paper": "~5.13.1",
    "react-native-safe-area-context": "4.12.0",
    "react-native-screens": "~4.4.0",
    "react-native-svg": "15.8.0"
  },
  "resolutions": {
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },
  "private": true,
  "devDependencies": {
    "@babel/preset-env": "~7.28.3",
    "@babel/preset-typescript": "~7.27.1",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@expo/vector-icons": "~14.0.4",
    "@react-native-community/eslint-config": "^3.2.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^10.0.5",
    "@semantic-release/npm": "^11.0.2",
    "@semantic-release/release-notes-generator": "^14.0.1",
    "@testing-library/react-native": "~13.0.1",
    "@types/jest": "~29.5.14",
    "@types/react": "~18.3.12",
    "@types/sqlite3": "~3.1.11",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "babel-jest": "~30.1.2",
    "babel-plugin-module-resolver": "~5.0.2",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-native": "^5.0.0",
    "husky": "9.1.7",
    "jest": "~29.7.0",
    "jest-expo": "~52.0.5",
    "lint-staged": "16.1.5",
    "metro-react-native-babel-preset": "~0.77.0",
    "prettier": "^3.6.2",
    "semantic-release": "^24.0.0",
    "typedoc": "0.28.13",
    "typescript": "~5.9.2",
    "varvara-typedoc-theme": "0.3.8"
  }
}
