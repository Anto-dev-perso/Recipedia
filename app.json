{
  "expo": {
    "name": "RecipesManager",
    "slug": "RecipesManager",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./src/assets/app/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./src/assets/app/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.RecipesManager"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/app/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.RecipesManager",
      "permissions": [
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "favicon": "./src/assets/app/favicon.png"
    },
    "plugins": [
      "expo-localization",
      [
        "expo-image-picker",
        {
          "photosPermission": "This app access your photos to recognize the recipe in it. Nothing is collect or share."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "7958883d-ab87-4da5-bccc-fe0c7ff40b6e"
      }
    }
  }
}
