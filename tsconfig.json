{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "strictPropertyInitialization": false,
    "target": "es2015",
    "moduleResolution": "node",
    "jsx": "react",
    "esModuleInterop": true,
    "baseUrl": "./src/",
    "paths": {
      "@assets/*": [
        "assets/*"
      ],
      "@components/*": [
        "components/*"
      ],
      "@navigation/*": [
        "navigation/*"
      ],
      "@screens/*": [
        "screens/*"
      ],
      "@styles/*": [
        "styles/*"
      ],
      "@customTypes/*": [
        "customTypes/*"
      ],
      "@utils/*": [
        "utils/*"
      ],
      "@test-data/*": [
        "../tests/data/*"
      ],
      "@mocks/*": [
        "../tests/mocks/*"
      ],
      "@translations/*": [
        "translations/*"
      ]
    }
  }
}
